<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_header_height_expanded"
        android:id="@+id/profile_app_bar_layout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/profile_collapsing_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|snap"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginStart="64dp"
            app:expandedTitleMarginEnd="48dp">

            <!--app:expandedTitleMarginStart="@dimen/profile_header_height_expanded"
            app:expandedTitleMarginEnd="@dimen/profile_card_height_collapsed">-->
            <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax">
                <ImageView
                    android:id="@+id/profile_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/cardview_dark_background"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/colorTextIcon"
                    android:textSize="40sp"
                    android:text="@string/header_name"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".fProfile">

            <!-- BIO -->
            <android.support.v7.widget.CardView
                android:id="@+id/profile_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_card_buffer"
                android:layout_marginLeft="@dimen/profile_card_buffer"
                android:layout_marginRight="@dimen/profile_card_buffer"
                android:layout_marginTop="@dimen/profile_card_buffer"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/profile_bio_header"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:padding="3dp"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/profile_bio_ic_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_expand_more_black_24dp" />

                            <ImageView
                                android:id="@+id/profile_bio_ic_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_expand_less_black_24dp" />
                        </FrameLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/profile_content_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="true"
                        android:text="@string/profile_bio"
                        android:visibility="gone"
                        android:enabled="false"
                        android:textAppearance="@style/Base.CardView"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- /BIO -->

            <!-- YES -->
            <android.support.v7.widget.CardView
                android:id="@+id/profile_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/profile_card_buffer"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/profile_yes_header"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:padding="3dp"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/profile_yes_ic_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_expand_more_black_24dp" />

                            <ImageView
                                android:id="@+id/profile_yes_ic_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_expand_less_black_24dp" />
                        </FrameLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/profile_content_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/profile_yes"
                        android:visibility="gone"
                        android:editable="true"
                        android:enabled="false"
                        android:textAppearance="@style/Base.CardView"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- /YES -->

            <!-- NO -->
            <android.support.v7.widget.CardView
                android:id="@+id/profile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/profile_card_buffer"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/profile_no_header"
                            android:padding="3dp"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/profile_no_ic_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_expand_more_black_24dp" />

                            <ImageView
                                android:id="@+id/profile_no_ic_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_expand_less_black_24dp" />
                        </FrameLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/profile_content_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/profile_no"
                        android:textAppearance="@style/Base.CardView"
                        android:visibility="gone"
                        android:editable="true"
                        android:enabled="false"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- /NO -->

            <!-- WISHLISTS -->
            <android.support.v7.widget.CardView
                android:id="@+id/profile_wishlists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/profile_card_buffer"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/profile_wishlists_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/profile_wishlist_header"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:padding="3dp"/>
                        <View
                            android:id="@+id/profile_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignBottom="@id/profile_wishlists_header"
                            android:background="@color/colorDivider"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/wishlists_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- /WISHLISTS -->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profile_edit_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="@dimen/fab_margin"
        app:layout_anchor="@id/profile_app_bar_layout"
        app:srcCompat="@drawable/ic_edit_black_24dp"/>

</android.support.design.widget.CoordinatorLayout>