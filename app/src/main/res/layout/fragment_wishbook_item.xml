<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:drawable/list_selector_background"
    android:id="@+id/layout_itemBox"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginLeft="@dimen/profile_card_buffer"
    android:layout_marginBottom="@dimen/profile_card_buffer"
    android:layout_marginTop="@dimen/profile_card_buffer"
    android:layout_marginRight="@dimen/profile_card_buffer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

    <TextView
        android:id="@+id/wishbookitem_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:editable="false"
                android:text="TEST2"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="25sp" />

    <TextView
        android:id="@+id/wishbookitem_content_description"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:editable="false"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="TEST3"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </LinearLayout>
        <ImageView
            android:id="@+id/wishbook_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"/>
        <ImageView
            android:id="@+id/wishbook_remove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_remove_black_24dp"/>
</LinearLayout>
</android.support.v7.widget.CardView>