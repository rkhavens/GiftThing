<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_card_height_min"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_itemBox"
    android:background="@android:drawable/list_selector_background"
    android:layout_marginLeft="@dimen/profile_card_buffer"
    android:layout_marginRight="@dimen/profile_card_buffer"
    android:layout_marginTop="@dimen/profile_card_buffer"
    android:layout_marginBottom="@dimen/profile_card_buffer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/item_image_width"
            android:layout_height="@dimen/item_image_height"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginBottom="@dimen/item_buffer"
            android:layout_marginTop="@dimen/item_buffer"
            android:layout_marginLeft="@dimen/item_buffer"
            android:layout_marginStart="@dimen/item_buffer"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/profile_card_buffer"
            android:layout_marginRight="@dimen/item_buffer"
            android:layout_marginEnd="@dimen/item_buffer"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_buffer"
                android:layout_marginLeft="@dimen/item_buffer"
                android:layout_marginStart="@dimen/item_buffer"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="@string/item_name_default" />

            <TextView
                android:id="@+id/item_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSecondary"
                android:text="@string/item_summary_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/item_buffer"
                android:layout_marginLeft="@dimen/item_buffer"
                android:layout_marginStart="@dimen/item_buffer"
                android:layout_marginEnd="@dimen/item_buffer"
                android:text="1"
                android:layout_weight=".6"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_remove_black_24dp"
                android:visibility="gone"/>
        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>